@model IEnumerable<ConverseStore.Models.ProDetail>

@{
    ViewBag.Title = "Index";
}
<style>
    th,td {
        padding:10px 20px;
        white-space:nowrap;
    }
    table, th, td {
        border:1px solid rgba(128, 128, 128,0.4);
    }
</style>

<h1>QUẢN LÝ HÀNG HÓA</h1>

<table>
    <tr>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Nhà cung cấp
        </th>
        <th>
            Giá
        </th>
        <th>
            Màu sắc
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Cỡ giày
        </th>
        <th>
            Dáng giày
        </th>
        <th>
            Từ khóa
        </th>
        <th>
            Ảnh 1
        </th>
        <th>
            Ảnh 2
        </th>
        <th>
            Ảnh 3
        </th>
        <th>
            Ảnh 4
        </th>
        <th>
            Ảnh 5
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.SupName)
            </td>
            <td>
                @string.Format("{0:#,0}",item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color.ColorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SHAPE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SIZE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KEYWORD)
            </td>
            <td>
                <img src="@Url.Content(item.Image1)" width="100"/>
            </td>
            <td>
                <img src="@Url.Content(item.Image2)" width="100"/>
            </td>
            <td>
                <img src="@Url.Content(item.Image3)" width="100"/>
            </td>
            <td>
                <img src="@Url.Content(item.Image4)" width="100"/>
            </td>
            <td>
                <img src="@Url.Content(item.Image5)" width="100"/>
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ProDeID }, new {@class="btn btn-primary" })
                @Html.ActionLink("Xóa", "Delete", new { id = item.ProDeID }, new {@class="btn btn-danger" })
            </td>
        </tr>
    }

</table>
<div style="padding-top:20px">
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-success" })
</div>
