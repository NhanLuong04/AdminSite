@model ConverseStore.Models.Color

@{
    ViewBag.Title = "Delete";
}

<style>
    dt, dd {
        padding: 10px 20px;
    }
</style>
<h2>QUẢN LÝ THÔNG TIN SẢN PHẨM</h2>
<h3>Bạn thực sự muốn xóa?</h3>
<div>
    <h4>Color</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Màu sắc
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ColorName)
        </dd>

        <dt>
            RGB
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RGB)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" /> 
            @Html.ActionLink("Quay lại", "Index",null, new {@class="btn btn-primary" })
        </div>
    }
</div>
