@model ConverseStore.Models.OrderDetail

@{
    ViewBag.Title = "Delete";
}

<h2>Xóa chi tiết đơn hàng</h2>

<h3>Bạn chắc chắn xóa chứ?</h3>
<div>
    <h4>OrderDetail</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Số lượng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <dt>
            Đơn giá
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UnitPrice)
        </dd>

        <dt>
            SĐT
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Order.CusPhone)
        </dd>

        <dt>
            Dáng giày
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProDetail.SHAPE)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" /> |
            @Html.ActionLink("Quay lại", "Index",null, new {@class="btn btn-primary" })
        </div>
    }
</div>
