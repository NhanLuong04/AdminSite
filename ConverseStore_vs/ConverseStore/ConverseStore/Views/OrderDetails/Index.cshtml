@model IEnumerable<ConverseStore.Models.OrderDetail>

@{
    ViewBag.Title = "Index";
}

<h2>Chi tiết đơn hàng</h2>
<table class="table">
    <tr>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Dáng giày
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order.CusPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProDetail.SHAPE)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.OrderDetailID }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.OrderDetailID })
        </td>
    </tr>
}

</table>
