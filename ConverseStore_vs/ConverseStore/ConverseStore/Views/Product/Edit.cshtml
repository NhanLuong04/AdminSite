@model ConverseStore.Models.Product

@{
    ViewBag.Title = "Edit";
}

<h1>QUẢN LÝ HÀNG HÓA</h1>
<div class="col-md-12">
    <h3>Chỉnh Sửa Sản Phẩm</h3>
    @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ProID)

            <div class="form-group">
                <div class="control-label col-md-2">Tên sản phẩm</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ProName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ProName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2">Loại hàng</div>
                <div class="col-md-10">
                    @Html.DropDownList("CatID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CatID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2">Hình ảnh chính</div>
                <div class="col-md-10">
                    <img src="@Url.Content(Model.ProImage)" width="150" height="150" />
                    @Html.TextBoxFor(model => model.UploadImage, htmlAttributes: new { @type = "file" })
                    @Html.ValidationMessageFor(model => model.UploadImage, "", new { @class = "text-danger" })
                </div>
                <div style="color:red">
                    @ViewBag.error
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2">Hình ảnh phụ</div>
                <div class="col-md-10">
                    <img src="@Url.Content(Model.ProImageHover)" width="150" height="150" />
                    @Html.TextBoxFor(model => model.UploadImageHover, htmlAttributes: new { @type = "file" })
                    @Html.ValidationMessageFor(model => model.UploadImageHover, "", new { @class = "text-danger" })
                </div>
                <div style="color:red">
                    @ViewBag.error
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2">Mô tả</div>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.NameDecription, new { @class = "form-control", style = "width: 100%; height: 100px;" })
                    @Html.ValidationMessageFor(model => model.NameDecription, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2">Ngày tạo</div>
                <div class="col-md-10">
                    <input type="date" name="CreatedDate" class="form-control" value="@string.Format("{0:yyyy-MM-dd}", Model.CreatedDate)" />
                    @Html.ValidationMessageFor(model => model.CreatedDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-success" />
                    @Html.ActionLink("Quay lại","DanhSach",null,new {@class="btn btn-primary" })
                </div>
            </div>
        </div>
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
