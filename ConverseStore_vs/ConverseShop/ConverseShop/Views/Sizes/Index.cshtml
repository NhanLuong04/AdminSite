@model IEnumerable<ConverseShop.Models.Size>

@{
    ViewBag.Title = "Index";
    int i = 0;
}

<style>
    th {
        white-space: nowrap;
    }
</style>

<div class="row" style="padding:15px">
    <div class="col-md-12">
        <h2>Danh sách kích thước giày</h2>
    </div>
    <div class="col-md-12">
        <form>
            <select name="sizeId" class="form-control" style="width:200px; display:inline-block;">
                <option>Tất cả loại</option>
                @foreach (var item in new ConverseShop.Models.mapSize().Index())
                {
                    <option value="@item.SizeID" @Html.Raw(item.SizeID == (int?)ViewBag.sizeId ? "Selected" : "")>@item.SizeNum</option>
                }
            </select>
            <input name="size" value="@ViewBag.size" class="form-control" style="width:300px; display:inline-block;" />
            <button class="btn btn-xs btn-success">Tìm kiếm</button>
        </form>
    </div>
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>
                    STT
                </th>
                <th>
                    Cỡ giày
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                i++;
                <tr>
                    <td>@i</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SizeNum)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.SizeID }) 
                        @Html.ActionLink("Delete", "Delete", new { id = item.SizeID })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>
<div>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
</div>
